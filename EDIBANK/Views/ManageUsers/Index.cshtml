@using EDIBANK.Models.Users_EdiWeb
@model ManageUsersViewModel

@{
    ViewData["Title"] = "Mantenimiento";
}
<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <br />
    <h2>@ViewData["Title"]</h2>

    <h3 style="font-style: italic">
        <span class="border-bottom border-secondary">Administrador</span>
    </h3>
    <br />
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <td>Id</td>
                <td>Email</td>
            </tr>
        </thead>

        @foreach (var user in Model.Admin)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
            </tr>
        }
    </table>
    <h3 style="font-style: italic">
        <span class="border-bottom border-secondary">Usuarios</span>
    </h3>
    <br />
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>

                <td>Email</td>
                <td>Descripción De Usuario</td>
                <td>Actualizar</td>
                <td>Eliminar</td>
            </tr>
        </thead>

        @foreach (var user in Model.Everyone)
        {
            <tr>

                <td>@user.Email</td>
                <td>@user.DescripUser</td>
                <td>
                    <a class="btn btn-sm btn-success" asp-action="Update" asp-route-id="@user.Id">
                        Actualizar <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Eliminar <i class="bi bi-person-dash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }

    </table>
    <br />
    <a class="btn btn-sm btn-primary" asp-action="Create">
        Crear <i class="bi bi-person-plus-fill"></i>
    </a>
</body>

</html>