@using EDIBANK.Models.Users_EdiWeb
@model Users

@{
    ViewData["Title"] = "CREATE USER";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<h1 class="bg-body text-white"><strong>Crear Usuario</strong></h1>
<a asp-action="Index"  class="btn btn-secondary">
    <i class="bi bi-back"></i>  Volver
    </a> 
<div asp-validation-summary="All" class="text-danger"></div>
  
<form method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DescripUser" class="control-label"></label>
        <input asp-for="DescripUser" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EDIId" class="control-label"></label>
        <select asp-for="EDIId" asp-items="Model.EDIs" class="form-control" ></select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">
        Crear <i class="bi bi-person-plus-fill"></i>
        </button>
</form>