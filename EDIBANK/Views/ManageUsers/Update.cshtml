@using EDIBANK.Models.Users_EdiWeb
@model ApplicationUser
@{
    ViewData["Title"] = "UPDATE USER";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<h1 class="bg-body text-white"><strong>Actualizar</strong></h1>
<a asp-action="Index" class="btn btn-secondary">
   <i class="bi bi-back"></i>Volver
    </a>
<div asp-validation-summary="All" class="text-danger"></div>
 
<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="password">Contraseña</label>
        <input name="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DescripUser">Descripción De Usuarios</label>
        <input asp-for="DescripUser" class="form-control" />
    </div>
    <br>
    <div class="form-group">
        <a asp-controller="ManageUsers" asp-action="UnblockUser" asp-route-id="@Model.Id" class="btn btn-outline-success">
          <i class="bi bi-arrow-clockwise"></i>  Desbloquear Usuario
            </a>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>