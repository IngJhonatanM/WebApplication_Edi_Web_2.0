@using WebApplication_Edi_Web_2._0.Models.Users_EdiWeb
@model Users

@{
    ViewData["Title"] = "CREATE USER";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
<h1 class="bg-body text-white"><strong>Crear Usuario</strong></h1>
<a asp-action="Index"  class="btn btn-secondary">
    <i class="bi bi-back"></i>  Volver
    </a> 
<div asp-validation-summary="All" class="text-danger"></div>
  
<form method="post">
    <div class="form-group">
        <label asp-for="Name">Nombre</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Contraseña</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DescripUser">Descripción De Usuarios</label>
        <input asp-for="DescripUser" class="form-control" />
    </div>
    <br>
    <button type="submit" class="btn btn-primary">
        Crear <i class="bi bi-person-plus-fill"></i>
        </button>
</form>