@using WebApplication_Edi_Web_2._0.Models.Users_EdiWeb
@model ManageUsersViewModel

@{
    ViewData["Title"] = "Manager users";
}
<!DOCTYPE html> 

<html>

    <head>


    </head>
 <body>

 <br />
  <h2>@ViewData["Title"]</h2>

    <h3 style="font-style: italic">
        <span class="border-bottom border-secondary">Administrators</span>
        
    </h3>
 <br />
    <table class="table table-bordered table-striped">
        <thead class ="table-dark">
            <tr>
                <td>Id</td>
                <td>Email</td>
            </tr>
        </thead>

        @foreach (var user in Model.Admin)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
            </tr>
        }
    </table>

    <h3 style="font-style: italic"> <span class="border-bottom border-secondary">Everyone</span>
        </h3>
    <br />
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>

                <td>Email</td>
                <td>User Description</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        @foreach (var user in Model.Everyone)
        {
            <tr>

                <td>@user.Email</td>
                <td>@user.DescripUser</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">Update</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        
    </table>
    <br>
    <a class="btn btn-sm btn-primary" asp-action="Create"> Create</a>
    </body>

    </html>